{
    "env": {
        "browser": true,
        "node": true
    },
    "extends": ["fbjs", "eslint:recommended", "prettier"],
    "plugins": ["prettier", "react"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true,
            "jsx": true,
            "spread": true
        },
        "allowImportExportEverywhere": true
    },
    "rules": {
        "prettier/prettier": "error",
        "relay/graphql-syntax": "off"
    }
}
